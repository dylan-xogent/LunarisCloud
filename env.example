# Database
DATABASE_URL="postgresql://app:app@db:5432/lunaris"

# Redis
REDIS_URL="redis://redis:6379"

# JWT
JWT_SECRET="change-me-to-a-secure-secret"
JWT_EXPIRES_IN="7d"

# Application
NODE_ENV="development"
PORT=4000
API_URL="http://localhost:4000"
WEB_URL="http://localhost:3000"

# S3/MinIO
S3_ENDPOINT="http://minio:9000"
S3_REGION="us-east-1"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_BUCKET="userfiles"
S3_FORCE_PATH_STYLE="true"

# Email (SMTP)
SMTP_FROM="no-reply@lunaris.win"
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"

# Admin user for seeding
ADMIN_EMAIL="admin@lunaris.win"
ADMIN_PASSWORD="admin-password"

# Worker
API_SECRET="change-me-to-a-secure-api-secret"

# ClamAV
CLAMAV_HOST="localhost"
CLAMAV_PORT="3310"

# Rate Limiting
RATE_LIMIT_AUTH="5"
RATE_LIMIT_UPLOAD="60"
RATE_LIMIT_DOWNLOAD="120"
RATE_LIMIT_ADMIN="30"

# File Upload Limits
MAX_FILE_SIZE_BYTES="5368709120"
MAX_FILE_SIZE_MB="5120"

# Quota settings
FREE_TIER_QUOTA_BYTES="16106127360"

# MinIO credentials
MINIO_ROOT_USER="minioadmin"
MINIO_ROOT_PASSWORD="minioadmin"
